<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>
  <body>
    <!-- INICIO HEADER-->
    <%- include('partials/header.ejs') %>
    <!-- FIN HEADER-->

    <!-- INICIO MAIN-->
    <main class="main-cart container">
      <section class="cart container">
        <h3 class="cart-title">CARRITO DE COMPRAS</h3>
        <table class="cart-table">
          <tr>
            <th>DETALLE DE PRODUCTO</th>
            <th>CANTIDAD</th>
            <th>TOTAL</th>
          </tr>
          <tr>
            <td class="cart-column__one">
              <section class="cart-item">
                <article class="cart-content">
                  <h4 class="cart-name">BABY YODA BLUEBALL</h4>
                  <p class="cart-licence">STAR WARS</p>
                  <p class="cart-price">precio: $ 1799,99</p>
                </article>
                <picture class="cart-item__cover">
                  <img
                    class="cart-item__img"
                    src="../assets/img/star-wars/baby-yoda-1.webp"
                    alt="Baby Yoda - Figura colleccionable Funko de Grogu de la serie The mandalorian"
                  />
                </picture>
              </section>
            </td>
            <td class="cart-column__two">
              <div class="cart-quantity">
                <input
                  class="item__input"
                  type="text"
                  name="quantity"
                  id="quantity"
                  placeholder="0"
                />

                <div class="cart__quantity-controls">
                  <iconify-icon
                    id="add"
                    class="item__quantity icon-red-background"
                    type="button"
                    icon="ph:plus-fill"
                  ></iconify-icon>
                  <iconify-icon
                    id="subtract"
                    class="item__quantity icon-red-background"
                    type="button"
                    icon="ph:minus-fill"
                  ></iconify-icon>
                </div>
              </div>
            </td>
            <td class="cart-column__three">
              <p class="cart-price-total">$ 3599,98</p>
            </td>
            <td class="cart-column__four">
              <a href="">
                <iconify-icon
                  class="icon-cancel"
                  icon="material-symbols:cancel-outline"
                ></iconify-icon>
              </a>
            </td>
          </tr>
        </table>
      </section>

      <section class="cart-resumen">
        <article class="cart-resumen__position">
          <h3 class="cart-resumen__title">RESUMEN</h3>
          <table class="cart-resumen-table">
            <tbody>
              <tr>
                <th>CANTIDAD DE ELEMENTOS</th>
                <td>3</td>
              </tr>
              <tr>
                <th>SUBTOTAL</th>
                <td>$ 5.399,97</td>
              </tr>
              <tr>
                <th>ENVIO</th>
                <td>$ 0,00</td>
              </tr>
              <tr class="border-top">
                <th>TOTAL</th>
                <td>$ 5.399,97</td>
              </tr>
            </tbody>
          </table>

          <button class="cart-resumen__button">IR A PAGAR</button>
        </article>
      </section>
    </main>
    <!-- FIN MAIN-->

    <!-- INICIO FOOTER-->
    <%- include('partials/footer.ejs') %>

    <!-- FIN FOOTER-->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <script src="../js/item.js"></script>
  </body>
</html>
