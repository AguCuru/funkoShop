      <aside class="aside container">
        <section class="aside-filters">
          <div class="aside-filters__buscar-ordenar">
            <h3>Buscar</h3>
            <input
              class="text-filters"
              type="text"
              name="busqueda"
              id="busqueda"
              placeholder="Item o categoria"
            />
            <h3>Ordenar por</h3>
            <label for="categoria">
              <select name="categoria" id="categoria">
                <option class="text-filters" value="mayor">
                  Mayor a menor
                </option>
                <option class="text-filters" value="menor">
                  Menor a mayor
                </option>
                <option class="text-filters" value="reciente">
                  Más reciente
                </option>
              </select>
              <iconify-icon icon="ion:caret-down"></iconify-icon>
            </label>
          </div>
          <h3>Precio</h3>
          <div class="aside-filters__precio">
            <p>Min</p>
            <input
              class="text-filters"
              type="text"
              name="minPrecio"
              id="minPrecio"
              placeholder="0"
            />
            <p>-</p>
            <p>Max</p>
            <input
              class="text-filters"
              type="text"
              name="maxPrecio"
              id="maxPrecio"
              placeholder="0"
            />
          </div>
          <h3>Filtrar</h3>
          <div class="aside-filters__filtrar">
            <label for="nuevos">
              <input
                class="check"
                type="checkbox"
                id="nuevos"
                name="filtro"
                value="nuevos"
              />
              Nuevos
            </label>

            <label for="ofertas">
              <input
                class="check"
                type="checkbox"
                id="ofertas"
                name="filtro"
                value="ofertas"
              />
              Ofertas
            </label>

            <label for="edicionEspecial">
              <input
                class="check"
                type="checkbox"
                id="edicionEspecial"
                name="filtro"
                value="edicion-especial"
              />
              Edición Especial
            </label>

            <label for="favoritos">
              <input
                class="check"
                type="checkbox"
                id="favoritos"
                name="filtro"
                value="favoritos"
              />
              Favoritos
            </label>
          </div>
        </section>
