<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>
  <body>
    <!-- INICIO HEADER-->
    <%- include('partials/header.ejs') %>
    <!-- FIN HEADER-->

    <!-- INICIO MAIN-->
    <main class="main container">
      <section class="item container">
        <% if (product) { %>
        <article class="item__content">
          <p class="item__licence"><%= product.licence_name %></p>
          <h3 class="item__name"><%= product.product_name %></h3>
          <p class="item__description"><%= product.product_description%></p>
          <p class="item__price">$ <%= product.product_price %></p>
          <div class="item__cart">
            <input
              class="item__input"
              type="text"
              name="quantity"
              id="quantity"
              placeholder="0"
            />
            <div class="item__quantity-controls">
              <iconify-icon
                id="add"
                class="item__quantity"
                type="button"
                icon="ph:plus-fill"
              ></iconify-icon>
              <iconify-icon
                id="subtract"
                class="item__quantity"
                type="button"
                icon="ph:minus-fill"
              ></iconify-icon>
            </div>
            <button
              class="item__submit btn btn--primary btn--medium"
              type="submit"
            >
              Agregar al Carrito
            </button>
          </div>
          <p class="item__promo">
            Ver metodos de pago - <%= product.product_dues %> CUOTAS SIN INTERÃ‰S
          </p>
        </article>
        <picture class="item__cover">
          <img
            class="item__img--front"
            src="<%=product.img_front%>"
            alt="Baby Yoda - Figura colleccionable Funko de Grogu de la serie The
          mandalorian"
          />
          <img
            class="item__img--back"
            src="<%=product.img_back%>"
            alt="Baby Yoda - Figura colleccionable Funko de Grogu de la serie The mandalorian"
          />
        </picture>
        <% } %>
      </section>

      <%- include('partials/slider') %>
    </main>
    <!-- FIN MAIN-->

    <!-- INICIO FOOTER-->
    <%- include('partials/footer.ejs') %>
    <!-- FIN FOOTER-->

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <script src="../js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="/js/glides.js"></script>
    <script src="/js/item.js"></script>
  </body>
</html>
